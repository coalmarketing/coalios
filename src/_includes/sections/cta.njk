<!-- CTA -->
<section class="relative ~py-16/24 ~px-4/8 bg-neutral-100 dark:bg-neutral-950 border-y border-neutral-300 dark:border-neutral-700 overflow-hidden z-10">
    <div class="container m-auto flex max-xl:flex-col-reverse justify-between items-center ~gap-12/24">
        <!-- BUBBLES -->
        <div class="group relative w-full max-w-xl aspect-[12/11] max-sm:scale-95" data-spotlight="both">
            <!-- HELIOS INUVIO -->
            <a href="/produkty/helios-inuvio" class="border-gradient absolute top-0 left-0 w-8/12 ~p-0.5/1 rounded-full z-0 transition-transform duration-300 hover:-translate-y-1">
                <span class="sr-only">Helios Inuvio</span>

                <!-- INNER CONTAINER -->
                <div class="spotlight-card flex justify-center items-center aspect-square ~p-8/16 bg-white dark:bg-neutral-900 rounded-full">
                    <img class="h-auto w-full"
                        src="/assets/svgs/products/helios-inuvio.svg"
                        alt="Ikona Helios Easy"
                        width="244"
                        height="113"
                        loading="lazy"
                        decoding="async"
                        aria-hidden="true"
                        draggable="false">
                </div>
            </a>

            <!-- HELIOS EASY -->
            <a href="/produkty/helios-easy" class="border-gradient absolute bottom-0 left-[40%] w-7/12 ~p-0.5/1 rounded-full z-10 transition-transform duration-300 hover:-translate-y-1">
                <span class="sr-only">Helios Easy</span>

                <!-- INNER CONTAINER -->
                <div class="spotlight-card flex justify-center items-center aspect-square ~p-6/14 bg-white dark:bg-neutral-900 rounded-full">
                    <img class="h-auto w-full"
                        src="/assets/svgs/products/helios-easy.svg"
                        alt="Ikona Helios Inuvio"
                        width="200"
                        height="87"
                        loading="lazy"
                        decoding="async"
                        aria-hidden="true"
                        draggable="false">
                </div>
            </a>

            <!-- COALSHOP KONEKTOR -->
            <a href="/produkty/coalshop-konektor" class="border-gradient absolute left-[60%] top-0 w-5/12 ~p-0.5/1 rounded-full z-20 transition-transform duration-300 hover:-translate-y-1">
                <span class="sr-only">coalshop konektor</span>

                <!-- INNER CONTAINER -->
                <div class="spotlight-card flex justify-center items-center aspect-square ~p-4/8 bg-white dark:bg-neutral-900 rounded-full">
                    <img class="block dark:hidden h-auto w-full"
                        src="/assets/svgs/products/coalshop-konektor-black.svg"
                        alt="Ikona coalshop konektor"
                        width="184"
                        height="60"
                        loading="lazy"
                        decoding="async"
                        aria-hidden="true"
                        draggable="false">

                    <img class="hidden dark:block h-auto w-full"
                        src="/assets/svgs/products/coalshop-konektor-white.svg"
                        alt="Ikona coalshop konektor"
                        width="184"
                        height="60"
                        loading="lazy"
                        decoding="async"
                        aria-hidden="true"
                        draggable="false">
                </div>
            </a>
        </div>

        <!-- TEXT + CTA -->
        <div class="flex flex-col items-start gap-8">
            <!-- HEADING + TEXT -->
            <div class="flex flex-col ~gap-4/7">
                <!-- TOPPER + HEADING -->
                <div class="flex flex-col items-start ~gap-3/5">
                    <!-- TOPPER -->
                    <div class="border-gradient p-0.5 rounded-full">
                        <div class="flex items-center gap-3 ~py-1/2.5 px-4 bg-white dark:bg-neutral-900 rounded-full before:h-2 before:w-2 before:bg-primary before:rounded-full">
                            <span class="font-lekton ~text-base/xl text-black dark:text-white leading-none">{{ cta.topper }}</span>
                        </div>
                    </div>

                    <h2 class="~max-w-[18rem]/xl font-lekton ~text-3xl/6xl text-black dark:text-white font-bold">{{ cta.heading }}</h2>
                </div>

                <p class="~max-w-md/[44rem] ~text-base/2xl text-neutral-800 dark:text-neutral-200">{{ cta.text }}</p>
            </div>

            <!-- CTA -->
            <a href="{{ cta.cta.url }}" class="btn btn-lg">
                {% for _ in range(2) %}
                    <span>{{ cta.cta.text }}</span>
                {% endfor %}

                <span class="icon">
                    {% for _ in range(2) %}
                        {% include "src/assets/svgs/arrow_outward.svg" %}
                    {% endfor %}
                </span>
            </a>
        </div>
    </div>

    <!-- BACKGROUND GRADIENT -->
    <div class="absolute top-0 left-0 h-full w-full bg-[radial-gradient(circle_at_top_left,#FF9E1BFF_0%,#FF9E1B00_60%)] opacity-10 -z-10"></div>

    <!-- STAR ANIMATION -->
    <div class="absolute top-0 left-0 h-full w-full -z-10">
        {% for _ in range(2) %}
            <div class="{% if loop.index === 1 -%} animate-vertical-marquee {%- else -%} absolute top-0 left-0 h-full w-full animate-vertical-marquee2 {%- endif %}">
                <div class="h-full block dark:hidden [&>svg]:h-full">
                    {% include "src/assets/svgs/cta/stars-black.svg" %}
                </div>

                <div class="h-full hidden dark:block [&>svg]:h-full">
                    {% include "src/assets/svgs/cta/stars-white.svg" %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>