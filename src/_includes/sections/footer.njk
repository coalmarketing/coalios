<!-- FOOTER -->
<footer class="~py-16/24 ~px-4/8">
    <div class="container m-auto border-gradient p-0.5 rounded-4xl">
        <!-- INNER CONTAINER -->
        <div class="flex flex-col gap-16 ~pt-10/16 ~pb-8/12 ~px-6/20 bg-neutral-100 dark:bg-neutral-900 rounded-4xl">
            <!-- TOP ROW -->
            <div class="flex max-xl:flex-col xl:justify-between xl:items-start ~gap-8/12">
                <!-- LOGO + NEWSLETTER + SOCIALS -->
                <div class="flex flex-col items-start gap-8">
                    <!-- LOGO + SLOGAN -->
                    <div class="flex flex-col items-start ~gap-4/5">
                        <img
                            class="block dark:hidden ~h-8/10 w-auto"
                            src="/assets/svgs/coalios_logo-black.svg"
                            alt="coalios logo"
                            width="206"
                            height="40"
                            loading="lazy"
                            decoding="async"
                            aria-hidden="true"
                            draggable="false">

                        <img
                            class="hidden dark:block ~h-8/10 w-auto"
                            src="/assets/svgs/coalios_logo-white.svg"
                            alt="coalios logo"
                            width="206"
                            height="40"
                            loading="lazy"
                            decoding="async"
                            aria-hidden="true"
                            draggable="false">

                        <p class="text-neutral-800 dark:text-neutral-200">{{ footer.slogan }}</p>
                    </div>

                    <!-- NEWSLETTER -->
                    <form method="POST" class="flex items-end gap-1.5">
                        <label class="flex flex-col items-start gap-2">
                            <span class="font-lekton text-black dark:text-white font-bold">{{ footer.newsletter }}</span>
                            <input type="email" placeholder="Email" autocomplete="email" class="input" required>
                        </label>

                        <button type="submit" class="group relative flex justify-center items-center h-[2.125rem] aspect-square bg-primary text-white dark:text-black outline outline-1 outline-primary outline-offset-2 rounded-full overflow-hidden z-10 transition-[outline-color] duration-500 ease-in-out hover:outline-black dark:hover:outline-white before:absolute before:inset-0 before:h-full before:w-full before:bg-black dark:before:bg-white before:rounded-full before:-z-10 before:transition-transform before:duration-500 before:ease-in-out before:origin-bottom before:scale-y-0 hover:before:scale-y-100">
                            <span class="sr-only">{{ footer.send }}</span>

                            <img
                                class="transition-[transform,_opacity] duration-500 ease-in-out group-hover:-translate-y-8 group-hover:translate-x-8 group-hover:opacity-0"
                                src="/assets/svgs/arrow_outward-black.svg"
                                alt="Ikona šipky směřující nahoru"
                                width="20"
                                height="20"
                                loading="lazy"
                                decoding="async"
                                aria-hidden="true"
                                draggable="false">

                            {% for _ in range(2) %}
                                <img
                                    class="{% if loop.index === 1 -%} block dark:hidden {%- else -%} hidden dark:block {%- endif %} absolute top-1/2 left-1/2 translate-y-8 -translate-x-8 whitespace-nowrap transition-[transform,_opacity] duration-500 ease-in-out opacity-0 group-hover:-translate-y-1/2 group-hover:-translate-x-1/2 group-hover:opacity-100"
                                    src="{% if loop.index === 1 -%} /assets/svgs/arrow_outward-white.svg {%- else -%} /assets/svgs/arrow_outward-black.svg {%- endif %}"
                                    alt="Ikona šipky směřující nahoru"
                                    width="20"
                                    height="20"
                                    loading="lazy"
                                    decoding="async"
                                    aria-hidden="true"
                                    draggable="false">
                            {% endfor %}
                        </button>
                    </form>

                    <!-- SOCIALS -->
                    <ul class="flex gap-2">
                        {% for item in footer.socials %}
                            <li>
                                <a href="{{ item.url }}" target="{{ item.target }}" class="text-neutral-600 dark:text-neutral-400 [&>svg]:h-5 [&>svg]:w-5 transition-colors duration-300 hover:text-black dark:hover:text-white">
                                    <span class="sr-only">{{ item.text }}</span>

                                    {% include item.icon %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <!-- NAVIGATION + CONTACTS -->
                <div class="flex max-xl:flex-col-reverse ~gap-y-8/12 ~gap-x-16/28">
                    <!-- NAVIGATIONS -->
                    <div class="flex ~gap-16/28">
                        <!-- NAVIGATION -->
                        {% for navigation in footer.navigation %}
                            <div class="flex flex-col gap-3">
                                <span class="font-lekton text-lg text-black dark:text-white font-bold">{{ navigation.title }}</span>

                                <!-- ITEMS -->
                                <ul class="flex flex-col gap-3">
                                    {% for item in navigation.items %}
                                        <li>
                                            <a href="{{ item.url }}" class="relative inline-block py-1 text-sm text-neutral-800 dark:text-neutral-200 hover:text-black dark:hover:text-white before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-full before:bg-black dark:before:bg-white before:transition-transform before:duration-500 before:ease-in-out before:scale-x-0 hover:before:scale-x-100">{{ item.text }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- CONTACTS -->
                    <div class="flex flex-col sm:flex-row xl:flex-col ~gap-6/8 sm:gap-16 xl:gap-8">
                        {% for item in footer.contacts %}
                            <div class="flex flex-col items-start ~gap-1/1.5">
                                <span class="font-lekton text-lg text-black dark:text-white font-bold">{{ item.title }}</span>
                                <a href="{{ item.url }}" target="{{ item.target }}" class="relative inline-block pt-1 text-sm text-neutral-800 dark:text-neutral-200 hover:text-black dark:hover:text-white before:absolute before:-bottom-1 before:left-0 before:h-0.5 before:w-full before:bg-black dark:before:bg-white before:transition-transform before:duration-500 before:ease-in-out before:scale-x-0 hover:before:scale-x-100">
                                    {{ item.text | safe }}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- COPYRIGHT + CREDITS -->
            <div class="flex flex-col gap-6">
                <!-- DIVIDER -->
                <div class="h-px bg-neutral-300 dark:bg-neutral-700"></div>

                <!-- COPYRIGHT + CREDITS -->
                <p class="text-center text-xs text-neutral-600 dark:text-neutral-400">
                    © {% year %}
                    {{ footer.copyright }}, {{ footer.credits }}
                    <a href="https://coalmarketing.cz/" target="_blank" class="underline hover:text-neutral-800 dark:hover:text-neutral-200">coalmarketing.cz</a>
                </p>
            </div>
        </div>
    </div>
</footer>